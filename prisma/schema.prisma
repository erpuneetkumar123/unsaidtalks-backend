generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String
  role      String  @default("EMPLOYEE") // ADMIN | EMPLOYEE
  verified  Boolean @default(false)
  tasks     Task[]
}

model Task {
  id        Int    @id @default(autoincrement())
  title     String
  dueDate   String
  userId    Int
  user      User   @relation(fields: [userId], references: [id])
}
